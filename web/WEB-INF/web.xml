<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterDoctor</servlet-name>
        <servlet-class>RegisterDoctor</servlet-class>
    </servlet><servlet>
        <servlet-name>UpdateDoctor</servlet-name>
        <servlet-class>UpdateDoctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginRegister</servlet-name>
        <servlet-class>RegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPhoto</servlet-name>
        <servlet-class>GetPhoto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterDoctor</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDoctor</servlet-name>
        <url-pattern>/updatedoc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginRegister</servlet-name>
        <url-pattern>/loginRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPhoto</servlet-name>
        <url-pattern>/GetPhoto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>aemail</param-name>
        <param-value>testincapp@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>apass</param-name>
        <param-value>incapp1234</param-value>
    </context-param>
    <listener>
        <listener-class>CtxListener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
